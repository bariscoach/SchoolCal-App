datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  
  // Custom fields
  stripeCustomerId String?
  subscriptionStatus String? // active, past_due, canceled
  role              String    @default("USER") // USER, ADMIN
  
  // Relations
  subscriptions  SchoolBoardSubscription[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? 
  access_token       String? 
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? 
  session_state      String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
 
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
 
  @@unique([identifier, token])
}

model SchoolBoard {
  id          String   @id @default(cuid())
  name        String   @unique
  region      String
  logoUrl     String?
  themeColor  String?  // hex code for UI customisation
  latitude    Float?
  longitude   Float?
  
  events        Event[]
  subscribers   SchoolBoardSubscription[]
}

model Event {
  id            String      @id @default(cuid())
  title         String
  date          String      // YYYY-MM-DD
  description   String?
  isPaDay       Boolean     @default(false)
  isHoliday     Boolean     @default(false)
  audience      String      @default("ALL") // ALL, ELEMENTARY, SECONDARY
  
  schoolBoard   SchoolBoard @relation(fields: [schoolBoardId], references: [id])
  schoolBoardId String
}

model SchoolBoardSubscription {
  id            String      @id @default(cuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  schoolBoard   SchoolBoard @relation(fields: [schoolBoardId], references: [id])
  schoolBoardId String
  
  @@unique([userId, schoolBoardId])
}
